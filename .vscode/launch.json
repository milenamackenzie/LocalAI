{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Node.js (Debug)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 9229,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Frontend: Flutter (Debug)",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/frontend",
      "program": "lib/main.dart",
      "flutterMode": "debug"
    },
    {
      "name": "Frontend: Flutter (Profile)",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/frontend",
      "program": "lib/main.dart",
      "flutterMode": "profile"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Backend + Frontend",
      "configurations": ["Backend: Node.js (Debug)", "Frontend: Flutter (Debug)"],
      "stopAll": true
    }
  ]
}
